              <button 
                class="training-carousel__button training-carousel__button--prev"
                onclick="moveCarousel(-1)"
                aria-label="Imagem anterior do treino"
                type="button"
              >
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>
              
              <button 
                class="training-carousel__button training-carousel__button--next"
                onclick="moveCarousel(1)"
                aria-label="Próxima imagem do treino"
                type="button"
              >
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            </div>
            
            <!-- Carousel Indicators -->
            <div class="training-carousel__indicators">
              <button class="training-carousel__dot training-carousel__dot--active" onclick="goToSlide(0)" aria-label="Ver primeira imagem"></button>
              <button class="training-carousel__dot" onclick="goToSlide(1)" aria-label="Ver segunda imagem"></button>
              <button class="training-carousel__dot" onclick="goToSlide(2)" aria-label="Ver terceira imagem"></button>
              <button class="training-carousel__dot" onclick="goToSlide(3)" aria-label="Ver quarta imagem"></button>
              <button class="training-carousel__dot" onclick="goToSlide(4)" aria-label="Ver quinta imagem"></button>
