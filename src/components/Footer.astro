        <nav class="footer__nav" role="navigation" aria-label="Links do rodapé">
          <ul class="footer__nav-list">
            <li>
              <a href="#sobre" class="footer__nav-link">Sobre o Charles</a>
            </li>
            <li>
              <a href="#servicos" class="footer__nav-link">Serviços</a>
            </li>
            <li>
              <a href="#depoimentos" class="footer__nav-link">Depoimentos</a>
            </li>
            <li>
              <a href="#contato" class="footer__nav-link">Contato</a>
            </li>
          </ul>
        </nav>
