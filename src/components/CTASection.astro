</section>

<style>
  /* ==========================================================================
     CTA SECTION STYLES
     ========================================================================== */
  
  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: var(--color-white);
    padding: var(--spacing-24) 0;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
    opacity: 0.1;
  }

  /* Header */
  .cta-section__header {
    margin-bottom: var(--spacing-12);
    position: relative;
    z-index: 2;
  }

  .cta-section__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    background: rgba(255, 255, 255, 0.2);
    padding: var(--spacing-2) var(--spacing-4);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-6);
    backdrop-filter: blur(10px);
  }

  .cta-section__badge-icon {
    flex-shrink: 0;
  }

  .cta-section__title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    margin-bottom: var(--spacing-6);
  }

  .cta-section__highlight {
    position: relative;
    background: linear-gradient(45deg, var(--color-accent), var(--color-white));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .cta-section__subtitle {
    font-size: var(--font-size-xl);
    line-height: var(--line-height-relaxed);
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.95;
  }

  /* Main Container */
  .cta-section__container {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-12);
    margin-bottom: var(--spacing-16);
    position: relative;
    z-index: 2;
  }

  /* Primary Action */
  .cta-section__primary {
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-xl);
    padding: var(--spacing-8);
    text-align: center;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: var(--shadow-2xl);
  }

  .cta-section__urgency {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    background: var(--color-accent);
    color: var(--color-white);
    padding: var(--spacing-2) var(--spacing-4);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-6);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }

  .cta-section__urgency-icon {
    flex-shrink: 0;
  }

  .cta-section__primary-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-4);
  }

  .cta-section__primary-subtitle {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-8);
    opacity: 0.9;
  }

  /* WhatsApp Button */
  .btn-whatsapp {
    background: #25D366;
    color: var(--color-white);
    border: none;
    font-size: var(--font-size-lg);
    padding: var(--spacing-4) var(--spacing-8);
    border-radius: var(--radius-lg);
    font-weight: var(--font-weight-bold);
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-3);
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(37, 211, 102, 0.3);
  }

  .btn-whatsapp:hover {
    background: #22C55E;
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(37, 211, 102, 0.4);
  }

  .btn-xl {
    padding: var(--spacing-5) var(--spacing-10);
    font-size: var(--font-size-xl);
  }

  .cta-section__whatsapp-icon {
    flex-shrink: 0;
  }

  /* Secondary Actions */
  .cta-section__secondary {
    display: grid;
    gap: var(--spacing-6);
  }

  .cta-section__options {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-6);
  }

  .cta-section__option {
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    padding: var(--spacing-6);
    text-align: center;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .cta-section__option h4 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-2);
  }

  .cta-section__option p {
    font-size: var(--font-size-base);
    margin-bottom: var(--spacing-4);
    opacity: 0.9;
  }

  /* Benefits */
  .cta-section__benefits {
    text-align: center;
    margin-bottom: var(--spacing-12);
    position: relative;
    z-index: 2;
  }

  .cta-section__benefits-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-8);
  }

  .cta-section__benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-6);
  }

  .cta-section__benefit {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-4);
    text-align: left;
  }

  .cta-section__benefit-icon {
    flex-shrink: 0;
    background: rgba(255, 255, 255, 0.2);
    padding: var(--spacing-2);
    border-radius: var(--radius-md);
    margin-top: var(--spacing-1);
  }

  .cta-section__benefit h4 {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-1);
  }

  .cta-section__benefit p {
    font-size: var(--font-size-sm);
    opacity: 0.9;
    line-height: var(--line-height-relaxed);
  }

  /* Social Proof */
  .cta-section__social-proof {
    text-align: center;
    margin-bottom: var(--spacing-12);
    position: relative;
    z-index: 2;
  }

  .cta-section__social-links h4 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-4);
  }

  .cta-section__social-buttons {
    display: flex;
    gap: var(--spacing-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-section__icon {
    flex-shrink: 0;
  }

  /* Guarantee */
  .cta-section__guarantee {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-4);
    background: rgba(255, 255, 255, 0.1);
    padding: var(--spacing-6);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    text-align: left;
    position: relative;
    z-index: 2;
  }

  .cta-section__guarantee-icon {
    flex-shrink: 0;
    background: rgba(255, 255, 255, 0.2);
    padding: var(--spacing-2);
    border-radius: var(--radius-md);
  }

  .cta-section__guarantee h4 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-2);
  }

  .cta-section__guarantee p {
    font-size: var(--font-size-base);
    opacity: 0.9;
    line-height: var(--line-height-relaxed);
  }

  /* Responsive Design */
  @media (min-width: 768px) {
    .cta-section__container {
      grid-template-columns: 2fr 1fr;
      align-items: start;
    }

    .cta-section__title {
      font-size: var(--font-size-5xl);
    }

    .cta-section__benefits-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .cta-section__guarantee {
      text-align: left;
    }
  }

  @media (max-width: 640px) {
    .cta-section {
      padding: var(--spacing-16) 0;
    }

    .cta-section__title {
      font-size: var(--font-size-3xl);
    }

    .cta-section__subtitle {
      font-size: var(--font-size-lg);
    }

    .cta-section__primary {
      padding: var(--spacing-6);
    }

    .cta-section__primary-title {
      font-size: var(--font-size-xl);
    }

    .cta-section__social-buttons {
      flex-direction: column;
    }

    .cta-section__guarantee {
      flex-direction: column;
      text-align: center;
    }

    .btn-xl {
      padding: var(--spacing-4) var(--spacing-6);
      font-size: var(--font-size-lg);
    }
  }
</style>
