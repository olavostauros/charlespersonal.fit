---
// BUSINESS PURPOSE: Base layout template for Charles Personal landing page conversion funnel
// TECHNICAL PURPOSE: Astro layout component providing mobile-first structure for Brazilian Portuguese speakers
// TARGET AUDIENCE: Adults 40-70 interested in fitness, primarily mobile users in Vila Velha, ES
// CONVERSION IMPACT: SEO optimization and performance tuning increase organic traffic and reduce bounce rate
// LANGUAGE IMPLEMENTATION: Full Brazilian Portuguese optimization with cultural sensitivity

// Layout.astro - Template base para todas as páginas
import '../styles/design-system.css';

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonicalURL?: string;
}

// Default meta values optimized for Charles Personal brand and Vila Velha market
const {
  title = "Charles Personal - Personal Trainer no MFit | Treinos Personalizados",
  description = "Transforme seu corpo com Charles Personal! Personal trainer especializado em emagrecimento, ganho muscular e saúde. Treinos personalizados no aplicativo MFit. Comece sua transformação hoje!",
  keywords = "personal trainer, treinos personalizados, emagrecimento, ganho muscular, fitness, academia, MFit, Charles Personal, treino online",
  ogImage = "/images/charles-hero.jpg",
  canonicalURL = new URL(Astro.url.pathname, Astro.site)
} = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <!-- 
    BUSINESS PURPOSE: Mobile-first meta tags optimized for Brazilian Portuguese speakers aged 40-70
    TECHNICAL PURPOSE: SEO and performance optimization for Vila Velha, ES market
    CONVERSION IMPACT: Local SEO targeting increases qualified traffic and reduces bounce rate
  -->
  
  <!-- Meta Tags Básicas - Mobile-first configuration for mature Brazilian users -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- Performance & Mobile - Optimized for Brazilian 3G/4G networks -->
  <meta name="format-detection" content="telephone=no" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  <meta name="theme-color" content="#3B82F6" />
  
  <!-- SEO Meta Tags - Otimizado para Vila Velha, ES e público 40-70 anos -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="author" content="Charles Personal Trainer" />
  
  <!-- Geographic targeting for local Vila Velha, ES business -->
  <meta name="geo.region" content="BR-ES" />
  <meta name="geo.placename" content="Vila Velha, Espírito Santo" />
  <meta name="geo.position" content="-20.3297;-40.2925" />
  <meta name="ICBM" content="-20.3297, -40.2925" />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(ogImage, Astro.site)} />
  <meta property="og:site_name" content="Charles Personal" />
  <meta property="og:locale" content="pt_BR" />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
  
  <!-- Fonts - Google Fonts Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link 
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" 
    rel="stylesheet" 
  />
  
  <!-- Preload Critical Resources -->
  <link rel="preload" href="/images/charles-hero.jpg" as="image" />
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" as="style" />
  
  <!-- Schema.org JSON-LD - Otimizado para personal trainer Vila Velha, ES -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Charles Personal Trainer",
      "jobTitle": "Personal Trainer",
      "url": "https://charlespersonal.fit",
      "description": "Personal trainer especializado em treinos personalizados, emagrecimento e ganho muscular para adultos de 40-70 anos em Vila Velha, ES",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Vila Velha",
        "addressRegion": "ES", 
        "addressCountry": "BR",
        "areaServed": ["Praia da Costa", "Praia de Itaparica", "Praia de Itapuã", "Itapoã", "Coqueiral", "Residencial Coqueiral"]
      },
      "sameAs": [
        "https://instagram.com/charlestonpersonaltrainer",
        "https://wa.me/5527996224175"
      ],
      "knowsAbout": [
        "Personal Training",
        "Emagrecimento",
        "Ganho de Massa Muscular", 
        "Condicionamento Físico",
        "Treino Online",
        "Aplicativo MFit",
        "Envelhecimento Ativo",
        "Saúde do Adulto Maduro"
      ],
      "makesOffer": {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Treinos Personalizados MFit",
          "description": "Treinos personalizados para emagrecimento, ganho muscular e saúde geral através do aplicativo MFit, especializado para adultos de 40-70 anos",
          "areaServed": {
            "@type": "Place", 
            "name": "Vila Velha, ES, Brasil"
          },
          "audience": {
            "@type": "Audience",
            "audienceType": "Adultos interessados em fitness e saúde",
            "suggestedMinAge": 40,
            "suggestedMaxAge": 70
          }
        }
      }
    }
  </script>
</head>

<body>
  <!-- Skip Navigation para Acessibilidade -->
  <a href="#main-content" class="sr-only">Pular para o conteúdo principal</a>
  
  <!-- Header/Navigation -->
  <header id="header" role="banner">
    <slot name="header" />
  </header>
  
  <!-- Main Content -->
  <main id="main-content" role="main">
    <slot />
  </main>
  
  <!-- Footer -->
  <footer id="footer" role="contentinfo">
    <slot name="footer" />
  </footer>
  
  <!-- 
    BUSINESS PURPOSE: Conversion tracking and analytics for optimization
    TECHNICAL PURPOSE: Track WhatsApp, MFit, and Instagram CTAs for ROI measurement
    CONVERSION IMPACT: Data-driven optimization increases conversion rates over time
  -->
  <script>
    // Smooth scroll para âncoras - Enhanced UX for mature users (40-70)
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // 
    // BUSINESS PURPOSE: CTA tracking enables conversion optimization and ROI measurement
    // TECHNICAL PURPOSE: Track critical conversion events for analytics
    // 
    function trackCTA(action, label) {
      // Preparado para Google Analytics
      if (typeof globalThis.gtag !== 'undefined') {
        globalThis.gtag('event', action, {
          event_category: 'CTA',
          event_label: label
        });
      }
      console.log(`CTA Tracked: ${action} - ${label}`);
    }
    
    // Event listeners para CTAs
    document.addEventListener('DOMContentLoaded', function() {
      // WhatsApp CTAs
      document.querySelectorAll('[data-cta*="whatsapp"]').forEach(button => {
        button.addEventListener('click', () => trackCTA('cta_whatsapp_click', 'WhatsApp CTA'));
      });
      
      // MFit CTAs
      document.querySelectorAll('[data-cta*="mfit"]').forEach(button => {
        button.addEventListener('click', () => trackCTA('cta_mfit_click', 'MFit CTA'));
      });
      
      // Instagram CTAs
      document.querySelectorAll('[data-cta*="instagram"]').forEach(button => {
        button.addEventListener('click', () => trackCTA('instagram_click', 'Instagram CTA'));
      });
      
      // CTA Section interactions
      document.querySelectorAll('[data-cta*="cta"]').forEach(button => {
        button.addEventListener('click', () => trackCTA('cta_section_click', 'CTA Section'));
      });
    });
  </script>
</body>
</html>

<!-- CSS para Screen Reader Only -->
<style>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  .sr-only:focus {
    position: static;
    width: auto;
    height: auto;
    padding: var(--spacing-2) var(--spacing-4);
    margin: 0;
    overflow: visible;
    clip: auto;
    white-space: normal;
    background-color: var(--color-primary);
    color: var(--color-white);
    text-decoration: none;
    border-radius: var(--radius-md);
  }
</style>
