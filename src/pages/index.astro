---
// Landing page principal do Charles Personal - Página única otimizada
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import About from '../components/About.astro';
import Testimonials from '../components/Testimonials.astro';
import CTASection from '../components/CTASection.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Charles Personal | Transforme Seu Corpo em 90 Dias - Personal Trainer Vila Velha ES"
  description="Transforme seu corpo em 90 dias com Charles Personal! Treinos personalizados no MFit para adultos 40-70 anos em Vila Velha. +200 clientes transformados. Suporte 24/7 via WhatsApp. Comece agora!"
  keywords="personal trainer vila velha, treinos personalizados, emagrecimento adultos, ganho muscular 40 anos, fitness vila velha, MFit app, Charles Personal, treino online, transformação corporal 90 dias, praia da costa, itaparica, coqueiral"
  ogImage="/images/charles-hero.jpg"
>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <Hero />
  
  <!-- Services Section -->
  <Services />
  
  <!-- About Section -->
  <About />
  
  <!-- Testimonials Section -->
  <Testimonials />
  
  <!-- CTA Section -->
  <CTASection />
  
  <!-- Contact Section -->
  <section class="section bg-primary text-white" id="contato">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-4">
        Pronto para Transformar seu Corpo?
      </h2>
      <p class="text-xl mb-8 opacity-90">
        Entre em contato e comece sua jornada de transformação hoje mesmo!
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="https://client.mfitpersonal.com.br/out/signup-link/ODY5NTY="
          class="btn btn-accent btn-lg"
          target="_blank"
          rel="noopener noreferrer"
          data-cta="mfit"
        >
          Começar Grátis no MFit
        </a>
        
        <a 
          href="https://wa.me/5527996224175?text=Oi%20Charles!%20Quero%20começar%20minha%20transformação!"
          class="btn btn-outline btn-lg text-white border-white hover:bg-white hover:text-primary"
          target="_blank"
          rel="noopener noreferrer"
          data-cta="whatsapp"
        >
          Falar no WhatsApp
        </a>
      </div>
    </div>
  </section>
  
  <Footer slot="footer" />
</Layout>
