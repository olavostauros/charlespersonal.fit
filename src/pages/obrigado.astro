<script>
  // Enhanced Thank You Page JavaScript
  document.addEventListener('DOMContentLoaded', function() {
    // Track conversion and page engagement
    trackConversion();
    setupCTATracking();
    setupEngagementFeatures();
    setupEmailReminderSystem();
  });
  
  // Conversion Tracking
  function trackConversion() {
    // Track page view conversion
    if (typeof (globalThis as any).gtag !== 'undefined') {
      (globalThis as any).gtag('event', 'conversion', {
        event_category: 'Lead',
        event_label: 'Thank You Page View',
        value: 1,
        currency: 'BRL'
      });
      
      // Enhanced ecommerce tracking
      (globalThis as any).gtag('event', 'purchase', {
        transaction_id: 'lead_' + Date.now(),
        value: 1,
        currency: 'BRL',
        items: [{
          item_id: 'lead_capture',
          item_name: 'Personal Training Lead',
          category: 'Fitness',
          quantity: 1,
          price: 1
        }]
      });
      
      // Conversion goals
      (globalThis as any).gtag('event', 'goal_completion', {
        event_category: 'Goal',
        event_label: 'Lead Capture Completed',
        goal_id: 1
      });
    }
    
    // Facebook Pixel conversion (if available)
    if (typeof (globalThis as any).fbq !== 'undefined') {
      (globalThis as any).fbq('track', 'Lead', {
        content_name: 'Personal Training Lead',
        content_category: 'Fitness',
        value: 1,
        currency: 'BRL'
      });
    }
    
    // Console tracking for development
    console.log('🎯 Lead Conversion Tracked - Thank You Page');
    
    // Track time spent on page
    const startTime = Date.now();
    window.addEventListener('beforeunload', function() {
      const timeSpent = Math.round((Date.now() - startTime) / 1000);
      if (typeof (globalThis as any).gtag !== 'undefined') {
        (globalThis as any).gtag('event', 'page_engagement', {
          event_category: 'Thank You Page',
          event_label: 'Time Spent',
          value: timeSpent
        });
      }
    });
  }
  
  // Enhanced CTA Tracking
  function setupCTATracking() {
    document.querySelectorAll('[data-cta]').forEach(button => {
      button.addEventListener('click', function() {
        const ctaType = this.getAttribute('data-cta');
        const ctaText = this.textContent?.trim() || 'Unknown CTA';
        const ctaPosition = getCTAPosition(this);
        
        // Analytics tracking
        if (typeof (globalThis as any).gtag !== 'undefined') {
          (globalThis as any).gtag('event', 'cta_click', {
            event_category: 'Thank You CTA',
            event_label: ctaType,
            custom_parameter_1: ctaText,
            custom_parameter_2: ctaPosition,
            page_location: window.location.href
          });
        }
        
        // Special tracking for urgency CTAs
        if (ctaType.includes('urgency')) {
          if (typeof (globalThis as any).gtag !== 'undefined') {
            (globalThis as any).gtag('event', 'urgency_cta_click', {
              event_category: 'High Intent',
              event_label: ctaType,
              value: 10
            });
          }
        }
        
        console.log(`🎯 CTA Tracked: ${ctaType} - Position: ${ctaPosition}`);
      });
    });
  }
  
  // Get CTA position for tracking
  function getCTAPosition(element: Element): string {
    const sections = ['steps', 'social', 'timeline', 'urgency', 'home'];
    for (const section of sections) {
      if (element.closest(`.thank-you__${section}`)) {
        return section;
      }
    }
    return 'unknown';
  }
  
  // User Engagement Features
  function setupEngagementFeatures() {
    // Animate step cards on scroll
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          (entry.target as HTMLElement).style.animation = 'slideInUp 0.6s ease-out forwards';
          (entry.target as HTMLElement).style.opacity = '1';
        }
      });
    }, observerOptions);
    
    // Observe step cards and other elements
    document.querySelectorAll('.step-card, .timeline-item, .social-card, .urgency-card').forEach(el => {
      (el as HTMLElement).style.opacity = '0';
      observer.observe(el);
    });
    
    // Add pulse effect to priority step
    setTimeout(() => {
      const priorityStep = document.querySelector('.step-card--priority') as HTMLElement;
      if (priorityStep) {
        priorityStep.style.animation = 'priorityPulse 2s ease-in-out 3';
      }
    }, 2000);
    
    // Add hover effects to timeline items
    document.querySelectorAll('.timeline-item').forEach(item => {
      item.addEventListener('mouseenter', function() {
        (this as HTMLElement).style.transform = 'translateX(8px) scale(1.02)';
      });
      
      item.addEventListener('mouseleave', function() {
        (this as HTMLElement).style.transform = 'translateX(0) scale(1)';
      });
    });
  }
  
  // Email Reminder System
  function setupEmailReminderSystem() {
    // Highlight email step after 30 seconds
    setTimeout(() => {
      const emailStep = document.querySelector('.step-card--priority') as HTMLElement;
      if (emailStep) {
        emailStep.style.border = '3px solid var(--color-accent)';
        emailStep.style.animation = 'emailReminder 2s ease-in-out 3';
        
        // Track reminder engagement
        if (typeof (globalThis as any).gtag !== 'undefined') {
          (globalThis as any).gtag('event', 'email_reminder_shown', {
            event_category: 'Engagement',
            event_label: '30 Second Reminder'
          });
        }
      }
    }, 30000);
    
    // Show urgency message after 60 seconds
    setTimeout(() => {
      const urgencyCard = document.querySelector('.urgency-card') as HTMLElement;
      if (urgencyCard) {
        urgencyCard.style.animation = 'urgencyPulse 1s ease-in-out 5';
        
        // Track urgency engagement
        if (typeof (globalThis as any).gtag !== 'undefined') {
          (globalThis as any).gtag('event', 'urgency_reminder_shown', {
            event_category: 'Engagement',
            event_label: '60 Second Urgency'
          });
        }
      }
    }, 60000);
  }
  
  // UTM Parameter Tracking
  const urlParams = new URLSearchParams(window.location.search);
  const utmSource = urlParams.get('utm_source');
  const utmMedium = urlParams.get('utm_medium');
  const utmCampaign = urlParams.get('utm_campaign');
  
  if (utmSource || utmMedium || utmCampaign) {
    if (typeof (globalThis as any).gtag !== 'undefined') {
      (globalThis as any).gtag('event', 'thankyou_page_utm', {
        event_category: 'Attribution',
        utm_source: utmSource || 'direct',
        utm_medium: utmMedium || 'none',
        utm_campaign: utmCampaign || 'none'
      });
    }
  }
</script>

